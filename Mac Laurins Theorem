#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main()
{    double n,j=0,i,sum=1,b=0;
    printf("Enter the number till which you wanna find the factorial ??\n");
    scanf("%lf",&n);

    for(i=1;i<=n;i++)
    {
    sum=sum*i;
    b=b+1/sum;
    printf(" %lf +",1/sum);


    }
    printf("\b = %lf",b);


    return 0;
}
